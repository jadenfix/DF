    "@tailwindcss/typography": "^0.5.16",
    "bullmq": "latest",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.0",
    "ioredis": "latest",
    "mongoose": "latest",
    "moondream": "^0.1.1",
